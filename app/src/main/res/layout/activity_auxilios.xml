<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".menu_pages.auxilios.AuxiliosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical">

        <Button
            android:id="@+id/ajudaDeCusto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/blue_white_button_selector"
            android:drawableLeft="@drawable/ajuda_de_custo_icon"
            android:gravity="center|left"
            android:onClick="ajudaDeCusto"
            android:paddingLeft="5dp"
            android:text="   Ajuda de Custo"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#020203"
            android:textSize="16sp" />

        <Button
            android:id="@+id/auxilioCreche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/blue_white_button_selector"
            android:drawableLeft="@drawable/auxilio_creche_icon"
            android:gravity="left|center_vertical"
            android:onClick="auxilioCreche"
            android:paddingLeft="5dp"
            android:text="   Auxílio Creche"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/auxilioEmergencial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/blue_white_button_selector"
            android:drawableLeft="@drawable/auxilio_emergencial_icon"
            android:gravity="left|center_vertical"
            android:onClick="auxilioEmergencial"
            android:paddingLeft="5dp"
            android:text="   Auxílio Emergêncial"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/auxilioMoradia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/blue_white_button_selector"
            android:drawableLeft="@drawable/auxilio_moradia_icon"
            android:gravity="left|center_vertical"
            android:onClick="auxilioMoradia"
            android:paddingLeft="5dp"
            android:text="   Auxílio Moradia"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/isencaoDoRU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@drawable/blue_white_button_selector"
            android:drawableLeft="@drawable/insencao_do_ru_icon"
            android:gravity="left|center_vertical"
            android:onClick="isencaoDoRU"
            android:text="   Isenção da Taxa do RU"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp"
            android:visibility="visible"
            android:paddingLeft="5dp" />
    </LinearLayout>
</ScrollView>