<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/noticias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#B7CCEF"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/newspaper"
                android:onClick="noticias"
                android:paddingTop="10dp"
                android:text="Noticias"
                android:textColor="#000066" />

            <Button
                android:id="@+id/bolsas_e_auxilios"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#84EA84"
                android:drawableTop="@drawable/auxilio"
                android:paddingTop="10dp"
                android:text="Bolsas e Auxílios"
                android:textColor="#000066"
                android:onClick="bolsasAuxilios"/>

            <Button
                android:id="@+id/restaurante_universitario"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#FFFF90"
                android:drawableTop="@drawable/ru"
                android:paddingTop="10dp"
                android:text="Restaurante Universitário"
                android:textColor="#000066"
                android:onClick="restauranteUniversitario"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/ajuda_de_custo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#FFFF6b"
                android:drawableTop="@drawable/ajuda_de_custo"
                android:paddingTop="10dp"
                android:text="Ajuda de custo"
                android:textColor="#000066"
                android:onClick="ajudaDeCusto"/>

            <Button
                android:id="@+id/acolhimento_ao_estudante"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#B7CCEF"
                android:drawableTop="@drawable/acolhimento"
                android:paddingTop="10dp"
                android:text="Acolhimento ao estudante"
                android:textColor="#000066"
                android:onClick="acolhimentoAoEstudante"/>

            <Button
                android:id="@+id/calendario_de_atividades"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#84EA84"
                android:drawableTop="@drawable/calendario"
                android:paddingTop="10dp"
                android:text="Calendário de atividades"
                android:textColor="#000066"
                android:onClick="calendarioDeAtividades"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/mapa_da_prae"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#84EA84"
                android:drawableTop="@drawable/mapa"
                android:onClick="mapaDaPrae"
                android:paddingTop="10dp"
                android:text="Mapas da PRAE"
                android:textColor="#000066" />

            <Button
                android:id="@+id/voce_sabia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#B7CCEF"
                android:drawableTop="@drawable/vocesabia"
                android:paddingTop="10dp"
                android:text="Você sabia?"
                android:textColor="#000066"
                android:onClick="voceSabia"/>

            <Button
                android:id="@+id/fale_conosco"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#FFFF6b"
                android:drawableTop="@drawable/faleconosco"
                android:paddingTop="10dp"
                android:text="Fale conosco"
                android:textColor="#000066"
                android:onClick="faleConosco"/>
        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>