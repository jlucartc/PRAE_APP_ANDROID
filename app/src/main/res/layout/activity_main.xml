<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background_prae_app_launcher_icon"
    android:fillViewport="false"
    android:padding="0dp"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="#ffffff"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/greenButtonSolid"
            android:padding="0dp">

            <Button
                android:id="@+id/noticias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/green_button_selector"
                android:drawableTop="@drawable/noticias_icon"
                android:gravity="center_horizontal"
                android:onClick="noticias"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:text="Notícias"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/calendario_de_atividades"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/green_button_selector"
                android:drawableTop="@drawable/atividades_icon"
                android:gravity="center_horizontal"
                android:onClick="calendarioDeAtividades"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:singleLine="false"
                android:text="Atividades"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/avisos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/green_button_selector"
                android:drawableTop="@drawable/avisos_icon2"
                android:gravity="center_horizontal"
                android:onClick="avisos"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:text="Avisos"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="0dp">

            <Button
                android:id="@+id/bolsas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/green_button_selector"
                android:drawableTop="@drawable/bolsas_icon"
                android:gravity="center_horizontal"
                android:onClick="bolsas"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:text="Bolsas"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#030303"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/auxilios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/green_button_selector"
                android:drawableTop="@drawable/auxilios_icon"
                android:gravity="center_horizontal"
                android:onClick="auxilios"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:text="Auxílios"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/servicos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/green_button_selector"
                android:drawableTop="@drawable/servicos_icon"
                android:gravity="center_horizontal"
                android:onClick="servicos"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:text="Serviços"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="0dp">

            <Button
                android:id="@+id/voce_sabia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/green_button_selector"
                android:drawableTop="@drawable/voce_sabia_icon"
                android:gravity="center_horizontal"
                android:onClick="voceSabia"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:text="Você sabia?"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#020202"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/fale_conosco"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/green_button_selector"
                android:drawableTop="@drawable/fale_conosco_icon"
                android:gravity="center_horizontal"
                android:onClick="faleConosco"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:text="Fale conosco"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#020202"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/green_button_selector"
                android:drawableTop="@drawable/mapas_da_prae"
                android:gravity="center_horizontal"
                android:onClick="mapaDaPrae"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:text="Mapas da PRAE"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#020202"
                android:textSize="14sp"
                android:textStyle="normal" />
        </TableRow>

