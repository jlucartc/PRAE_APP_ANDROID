<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".menu_pages.saude_e_cultura.SaudeCulturaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical">

        <Button
            android:id="@+id/comunicacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_white_button_selector"
            android:onClick="comunicacao"
            android:text="Comunicação"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cultura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/blue_white_button_selector"
            android:onClick="cultura"
            android:text="Cultura"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/educacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/blue_white_button_selector"
            android:onClick="educacao"
            android:text="Educação"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/meio_ambiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/blue_white_button_selector"
            android:onClick="meioAmbiente"
            android:text="Meio Ambiente"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/saude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/blue_white_button_selector"
            android:onClick="saude"
            android:text="Saúde"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>